# Storage backend: "r2" | "oss" | "" (disabled)
SPLAZMATTE_STORAGE_BACKEND=r2

# Cloudflare R2
SPLAZMATTE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
SPLAZMATTE_R2_BUCKET=your-bucket
SPLAZMATTE_R2_ACCESS_KEY=your-access-key
SPLAZMATTE_R2_SECRET_KEY=your-secret-key
SPLAZMATTE_R2_CDN_DOMAIN=your-cdn-domain
SPLAZMATTE_R2_PREFIX=splazmatte

# Aliyun OSS
SPLAZMATTE_OSS_ACCESS_KEY_ID=your-access-key-id
SPLAZMATTE_OSS_ACCESS_KEY_SECRET=your-access-key-secret
SPLAZMATTE_OSS_BUCKET=your-bucket
SPLAZMATTE_OSS_ENDPOINT=https://oss-cn-beijing.aliyuncs.com
SPLAZMATTE_OSS_CDN_DOMAIN=your-cdn-domain
SPLAZMATTE_OSS_PREFIX=splazmatte

# Feishu Bot
SPLAZMATTE_FEISHU_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/your-webhook-id

# LAN IP (optional â€” override auto-detection for Feishu notifications)
# SPLAZMATTE_LAN_IP=192.168.31.100

# Gradio
SPLAZMATTE_PORT=7860

# Preview image max dimensions (pixels). Frames are downscaled to fit.
# SPLAZMATTE_PREVIEW_MAX_W=800
# SPLAZMATTE_PREVIEW_MAX_H=800
